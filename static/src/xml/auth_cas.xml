<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <template id="cas_crash_template">
            <t t-name="CrashManager.cas_check_success">
                <table cellspacing="0" cellpadding="0" border="0" class="oe_dialog_warning">
                    <tr>
                        <td class="oe_dialog_icon"><img t-att-src='_s + "/auth_cas/static/src/img/success.png"'/></td>
                        <td>
                            <p>
                                <t t-js="d">
                                    var message = d.message ? d.message : d.error.data.fault_code;
                                    d.html_error = context.engine.tools.html_escape(message)
                                    .replace(/\n/g, '<br/>');
                                </t>
                                <t t-raw="html_error"/>
                            </p>
                        </td>
                    </tr>
                </table>
            </t>

            <t t-name="CrashManager.cas_check_fail">
                <table cellspacing="0" cellpadding="0" border="0" class="oe_dialog_warning">
                    <tr>
                        <td class="oe_dialog_icon"><img t-att-src='_s + "/auth_cas/static/src/img/fail.png"'/></td>
                        <td>
                            <p>
                                <t t-js="d">
                                    var message = d.message ? d.message : d.error.data.fault_code;
                                    d.html_error = context.engine.tools.html_escape(message)
                                    .replace(/\n/g, '<br/>');
                                </t>
                                <t t-raw="html_error"/>
                            </p>
                        </td>
                    </tr>
                </table>
            </t>

        </template>
        
    </data>
</openerp>
